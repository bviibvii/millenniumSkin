{
    "compilerOptions": {
        "jsx": "react-jsx",
        "module": "esnext",
        "target": "es2020",
        "lib": [
            "ES2015",
            "DOM"
        ],
        "moduleResolution": "bundler",
        "esModuleInterop": true,
        "declaration": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "typeRoots": [
            "./node_modules/@types/**/*.d.ts"
        ],
        "paths": {},
        "declarationDir": "./dist",
        "emitDeclarationOnly": false
    }
}